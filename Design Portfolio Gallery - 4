  <div id="display">
    <img id="highlighted" src="" alt="Selected Design">
  </div>
  <button id="showImage">Highlight Selected Image</button>

  <script>
    let selectedImage = "";

    $(".gallery img").click(function() {
      selectedImage = $(this).attr("src");
      $("#highlighted").attr("src", selectedImage).css({width:0, height:0, opacity:0});
    });

    $("#showImage").click(function() {
      if (selectedImage !== "") {
        $("#highlighted").animate(
          {width:"600px", height:"400px", opacity:1}, 
          1000
        );
      } else {
        alert("Please select an image from the gallery first.");
      }
    });
  </script>
