<body>
  <div class="box">
    <h2>4-Digit Number Validation</h2>
    <input type="text" id="numInput" placeholder="Enter 4-digit number">
    <button onclick="validateNumber()">Validate</button>
    <p id="result"></p>
  </div>

  <script>
    function validateNumber() {
      let num = document.getElementById("numInput").value.trim();
      let result = document.getElementById("result");

      if (!/^\d{4}$/.test(num)) {
        result.textContent = "⚠ Please enter exactly 4 digits.";
        result.className = "error";
        return;
      }

      if (num[0] === "0") {
        result.textContent = "⚠ First digit cannot be zero.";
        result.className = "error";
        return;
      }

      let isAscending = true;
      for (let i = 0; i < num.length - 1; i++) {
        if (num[i] >= num[i + 1]) {
          isAscending = false;
          break;
        }
      }

      if (!isAscending) {
        result.textContent = "⚠ Digits must be in ascending order.";
        result.className = "error";
      } else {
        result.textContent = "✅ Valid number!";
        result.className = "success";
      }
    }
  </script>
</body>
